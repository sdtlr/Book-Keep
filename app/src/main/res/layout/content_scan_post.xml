<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="10dp">

<TextView
    android:id="@+id/scan_format"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textIsSelectable="true"
    android:layout_marginTop="55dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />
<TextView
    android:id="@+id/scan_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textIsSelectable="true"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/scan_format" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scan_TitleView"
    android:layout_below="@+id/scan_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scan_AuthorView"
    android:layout_below="@+id/scan_TitleView"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scan_PublishedView"
    android:layout_below="@+id/scan_AuthorView"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/scan_DescriptionView"
    android:layout_below="@+id/scan_PublishedView"
    android:layout_alignParentStart="true"
    android:layout_alignEnd="@+id/scan_PageCountView" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scan_PageCountView"
    android:layout_below="@+id/scan_DescriptionView"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true" />

</RelativeLayout>